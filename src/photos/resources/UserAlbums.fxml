<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="photos.controller.UserAlbumsController">
   <top>
      <Label fx:id="usernameLabel" text="Albums" style="-fx-font-size: 20px; -fx-font-weight: bold;" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </Label>
   </top>
   <center>
      <VBox spacing="10" xmlns="http://javafx.com/javafx/11.0.1">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Label text="Your Albums:" />
            <ListView fx:id="albumsListView" VBox.vgrow="ALWAYS" />
            <HBox spacing="10">
               <TextField fx:id="newAlbumNameField" HBox.hgrow="ALWAYS" />
               <Button text="Create Album" onAction="#handleCreateAlbum" />
               <Button text="Delete Album" onAction="#handleDeleteAlbum" />
               <Button text="Rename Album" onAction="#handleRenameAlbum" />
               <Button text="Open Album" onAction="#handleOpenAlbum" />
            </HBox>
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox spacing="10" alignment="CENTER" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <Button text="Search Photos" onAction="#handleSearch" />
         <Button text="Logout" onAction="#handleLogout" />
      </HBox>
   </bottom>
</BorderPane>

